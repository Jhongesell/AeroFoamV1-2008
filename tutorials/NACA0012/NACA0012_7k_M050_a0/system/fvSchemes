// FoamX Case Dictionary.

FoamFile
{
    version         2.0;
    format          ascii;

    root            "";
    case            "";
    instance        "";
    local           "";

    class           dictionary;
    object          fvSchemes;
}

// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

AeroFoamSchemes
{
//..............................Time integration
    timeScheme           RK2;
    CourantMax           0.0;
    CourantSteps         25;
//..............................Space integration
    flowType             Euler;
    MonotoneFlux         Roe;
    HighResolutionFlux   LW;
    fluxLimiter          VL;
    entropyFix           HH2;
//..............................Boundary conditions 
    extrapolateBC        0; 
//..............................Residual evaluation
    residualNorm         L1;  
    minResidual          -1;
//..............................Extended cells connectivity
    loadConnectivity     0;
    adaptiveConnectivity 0;
    testMesh             0;
//..............................Check for errors
    testInput            1;
}

